#!/usr/bin/env ruby

require 'chronicle'

COMMAND = ARGV[0].downcase

if COMMAND == "between"
  generator = Chronicle::Generator.new
  generator.log_between ARGV[1], ARGV[2]
  
  if ARGV[3]
    generator.character= ARGV[3]
  end
  
  puts generator.generate
  
elsif COMMAND == "since"
  generator = Chronicle::Generator.new
  generator.log_since ARGV[1]
  
  if ARGV[2]
    generator.character= ARGV[2]
  end
  
  puts generator.generate
  
end